<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/back"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/Dimg"
        android:layout_width="100dp"
        android:layout_height="152dp"

        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />


    <TextView
        android:id="@+id/Did"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="did"
        app:layout_constraintStart_toEndOf="@+id/Dimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Dname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="staris"
        app:layout_constraintStart_toEndOf="@+id/Dimg"
        app:layout_constraintTop_toBottomOf="@+id/Did" />

    <TextView
        android:id="@+id/Dage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="25"
        app:layout_constraintStart_toEndOf="@+id/Dimg"
        app:layout_constraintTop_toBottomOf="@+id/Dname" />

    <TextView
        android:id="@+id/Dyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="dyear"
        app:layout_constraintStart_toEndOf="@+id/Dimg"
        app:layout_constraintTop_toBottomOf="@+id/Dage" />

    <TextView
        android:id="@+id/Dphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="dphone"
        app:layout_constraintStart_toEndOf="@+id/Dimg"
        app:layout_constraintTop_toBottomOf="@+id/Dyear" />

    <TextView
        android:id="@+id/Dmajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="major"
        app:layout_constraintStart_toEndOf="@+id/Dimg"
        app:layout_constraintTop_toBottomOf="@+id/Dphone" />


</androidx.constraintlayout.widget.ConstraintLayout>