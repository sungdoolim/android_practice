<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="53dp"
            android:layout_height="27dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="8dp"
            android:text="설정"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:src="@drawable/home_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="@color/colorgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout9" />


    <LinearLayout
        android:background="@color/mint"
        android:layout_marginTop="70dp"
        android:id="@+id/linear1"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="15dp"
            android:layout_height="25dp"
        android:layout_width="wrap_content"

        android:text="\t\t\t공지사항"/>
        <include layout="@layout/line"/>
        <TextView
            android:textSize="15dp"
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:text="\t\t\t이벤트 동의 설정"/>
        <include layout="@layout/line"/>
        <TextView
            android:textSize="15dp"
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:text="\t\t\t도움말"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/mint"
        android:id="@+id/linear2"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t위치기반 서비스 이용약관 동의 설정"/>
        <include layout="@layout/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t프로필 정보 수집 및 이용에 대한 동의 설정"/>
        <include layout="@layout/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t개인정보 처리방침"/>
        <include layout="@layout/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t마이 헤어 다이어리 맞춤형 광고 안내"/>
        <include layout="@layout/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t오픈소스 라이센스"/>


    </LinearLayout>

    <LinearLayout
        android:background="@color/mint"
        android:layout_marginTop="70dp"
        android:id="@+id/linear3"
        app:layout_constraintTop_toBottomOf="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t알림 설정"/>
        <include layout="@layout/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t앱 평가하기"/>
        <include layout="@layout/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t로그아웃"/>
        <include layout="@layout/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="25dp"
            android:text="\t\t\t탈퇴하기"/>
        <include layout="@layout/line"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="25dp"
                android:text="\t\t\t현재 버전"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="25dp"
                android:textColor="@color/colorred"
                android:text="4.0.28"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



    <include layout="@layout/bottom_navi"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>