<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".designers.designer_list">

    <EditText
        android:id="@+id/regionedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="sort"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sortdesigner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sort"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regionedit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/designerlist"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortdesigner" />
</androidx.constraintlayout.widget.ConstraintLayout>