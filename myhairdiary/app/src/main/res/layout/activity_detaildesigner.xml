<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".designers.detaildesigner">
<TextView
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/detailyear"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/detailage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/detailid"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/datailname"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/detailphone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/detailmemo"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:text="예약하러 가기"
    android:id="@+id/gotonaver"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="faceBook"
        android:id="@+id/gotoface"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Instagram"
        android:id="@+id/gotoinsta"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Youtube"
        android:id="@+id/gotoyoutube"/>

</LinearLayout>